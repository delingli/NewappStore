<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/store_appinfo_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/store_single_pic"
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <!--app Info-->
    <RelativeLayout
        android:id="@id/store_appinfo_rl"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#E6FFFFFF">

        <ImageView
            android:id="@id/store_appinfo_icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/store_appinfo_icon_iv"
            android:orientation="vertical">

            <TextView
                android:id="@id/store_appinfo_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:textColor="#434343"
                android:textSize="16sp" />

            <TextView
                android:id="@id/store_appinfo_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#434343"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@id/store_appinfo_download_tv"
            android:layout_width="56dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="安装"
            android:textColor="#1070CC"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>