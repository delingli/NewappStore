<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bottom_store_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#384B8A">

        <ImageView
            android:id="@+id/bottom_store_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/bottom_store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/bottom_store_icon"
            android:text="附近的人都在玩神马?"
            android:textColor="#fff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/bottom_store_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp" />
    </RelativeLayout>
</LinearLayout>