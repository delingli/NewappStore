<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/power_store_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/power_store_close_content"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/power_store_close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="右滑关闭"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/power_store_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/power_store_close_tv" />
    </RelativeLayout>

    <TextView
        android:id="@+id/power_store_anp"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="46dp"
        android:text="上午"
        android:textColor="#E6F1F1F1"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/power_store_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="82dp"
        android:text="10:29"
        android:textColor="#E6F1F1F1"
        android:textSize="46dp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="#E61C2537">

            <ImageView
                android:id="@+id/power_store_ring_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/power_store_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp" />

            <ImageView
                android:id="@+id/power_store_battery"
                android:layout_width="36dp"
                android:layout_height="68dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/power_store_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_toRightOf="@id/power_store_battery"
                android:text="充电已连接"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/power_store_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="54dp"
                android:layout_toRightOf="@id/power_store_battery"
                android:text="正在加速充电..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="18dp"
                android:text="当前电量"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/power_store_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:text="75%"
                android:textColor="#FF0BFC5E"
                android:textSize="33dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/new_power_store_content"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#cc000000"
            android:orientation="vertical"
            android:visibility="gone">

            <com.bbx.support.MyViewPager
                android:id="@+id/new_power_store_vp"
                android:layout_width="match_parent"
                android:layout_height="218dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/new_power_store_v1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/new_power_store_v2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/new_power_store_v3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/new_power_store_v4"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>