<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_store_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cc000000"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/banner_store_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/banner_store_up_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="48dp" />

        <TextView
            android:id="@+id/banner_store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/banner_store_up_iv"
            android:textColor="#15FF3C"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/banner_store_title"
            android:text="应用可一键更新"
            android:textColor="#fff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner_store_title"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/banner_store_app_one"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/banner_store_app_two"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/banner_store_app_three"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/banner_store_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:text="立即更新"
            android:textColor="#15FF3C"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>